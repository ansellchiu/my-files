# Matt Stauffer's awesome Brewfile
# hijacked from http://mattstauffer.co/blog/setting-up-a-new-os-x-development-machine-part-2-global-package-managers
tap homebrew/dupes
tap homebrew/versions
tap homebrew/homebrew-php
install php-version
install homebrew/php/composer
install openssl
install php54 --without-pear --with-homebrew-curl --with-homebrew-openssl 
install php54-mcrypt
install php55 --without-pear --with-homebrew-curl --with-homebrew-openssl
install php55-mycrypt
# unlink and allow php-version to handle
unlink php54
unlink php55
install wget
install optipng
install redis
install mysql
install phpunit
install postgresql
